{% extends 'base.html.twig' %}

{% block title %}Search Results
{% endblock %}

{% block body %}
	<h1>Search Results for "{{ query }}"</h1>

	<h2>Posts</h2>
	{% if posts is not empty %}
		<ul>
			{% for post in posts %}
				<li>{{ post.title }}
					-
					{{ post.body|slice(0, 100) }}...</li>
			{% endfor %}
		</ul>
	{% else %}
		<p>No posts found.</p>
	{% endif %}

	<h2>Users</h2>
	{% if users is not empty %}
		<ul>
			{% for user in users %}
				<li>{{ user.username }}
					-
					{{ user.email }}</li>
			{% endfor %}
		</ul>
	{% else %}
		<p>No users found.</p>
	{% endif %}
{% endblock %}
