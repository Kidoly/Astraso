{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">User Profile</div>

                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th scope="row">Username</th>
                                <td>{{ user.username }}</td>
                            </tr>
                            <tr>
                                <th scope="row">First Name</th>
                                <td>{{ user.firstName }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Last Name</th>
                                <td>{{ user.lastName }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Biography</th>
                                <td>{{ user.biography }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Joined</th>
                                <td>{{ user.createdAt ? user.createdAt|date('M d, Y') : '' }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="card-footer">
                    <!-- Afficher le nombre de followers -->
                    <p>Nombre de followers : {{ numberOfFollowers}}</p>
                    <!-- Afficher le nombre de personnes suivies -->
                    <p>Nombre de personnes suivies : {{ numberOfFollowings}}</p>
                </div>

                <div class="card-footer">
                    <!-- Affichage des boutons d'abonnement -->
                    {% if app.user.id == user.id %}
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary"><i class="bi bi-gear-fill"></i>
                        </a>
                        {{ include('user/_delete_form.html.twig') }}
                    {% else %}
                        {% if follow is empty %}
                            <a href="{{ path('app_user_follow', {'id': user.id}) }}" class="btn btn-primary"><i class="bi bi-star"></i>
                            </a>
                        {% else %}
                            <a href="{{ path('app_user_unfollow', {'id': user.id}) }}" class="btn btn-danger"><i class="bi bi-star-fill"></i></a>
                        {% endif %}
                    {% endif %}
                    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
