{% block footer %}
{%if app.user %}
	<div class="trends">
		<div class="d-flex align-items-center justify-content-center">
			<form class="form-inline d-flex" action="{{ path('search') }}" method="GET">
				<input class="form-control m-1" type="text" name="query" placeholder="Search" aria-label="Search">
				<button class="btn btn-outline-primary m-1" type="submit">Go</button>
			</form>
		</div>
		<div class="d-flex align-items-center justify-content-center">
			<h2 class="text-center">Tendance</h2>
		</div>
		<div class="d-flex align-items-center justify-content-center">
			<ul class="list-group">
				{% for trend in trend_service.getTrends() %}
					<a href="/search?query=%23{{ trend.name }}" type="button" style="border-radius:0;" class="btn btn-primary">
						#{{ trend.name }}
						<span class="badge text-bg-secondary">{{trend.postCount}}</span>
					</a>
				{% endfor %}
			</ul>
		</div>
	</div>
{%endif%}

{% endblock %}
